---
import TeamCard from "./TeamCard";

const team = [
	{
		name: "Jan",
		position: "CEO",
		photo: "frogville-frog.png",
	},
	{
		name: "Franek",
		position: "Gamedev Lead",
		photo: "frogville-frog.png",
	},
	{
		name: "Wojciech",
		position: "Designer",
		photo: "Wojciech.png",
	},
	{
		name: "Katarzyna",
		position: "Locations Artist",
		photo: "Katarzyna.png",
	},
	{
		name: "Victoria",
		position: "Slave",
		photo: "Victoria.png",
	},
	{
		name: "Czarna",
		position: "Intern",
		photo: "Czarna.png",
	},
];
---

<div class="bg-gray-800 relative py-24 lg:py-24" id="team">
	<div
		class="absolute inset-0 bg-about bg-center bg-cover bg-no-repeat bg-fixed"
	>
		<div
			class="absolute inset-0 bg-gray-800 mix-blend-multiply"
			aria-hidden="true"
		>
		</div>
	</div>
	<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
		<div class="space-y-12 relative">
			<div
				class="space-y-5 sm:space-y-4 md:max-w-xl lg:max-w-3xl xl:max-w-none"
			>
				<h2
					class="mt-4 text-3xl font-bold tracking-wide text-white sm:text-4xl md:text-5xl"
				>
					Poznaj nasz zespół
				</h2>
				<p class="text-xl text-gray-300">
					Ornare sagittis, suspendisse in hendrerit quis. Sed dui aliquet lectus
					sit pretium egestas vel mattis neque.
				</p>
			</div>
			<div
				
				class="sm:grid sm:grid-cols-2 sm:gap-6 lg:grid-cols-3 lg:gap-8"
			>
				{
					team.map((item, index) => (
						<TeamCard item={item} index={index} client:visible />
					))
				}
			</div>
		</div>
	</div>
</div>